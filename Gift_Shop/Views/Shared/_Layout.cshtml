<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <base href="">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body ng-app="myApp" ng-controller="GlobalController" >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gift Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })          
                    
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>                        
                        <div>
                            <form class="navbar-form navbar-left" role="search">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Search" ng-model="query">
                                </div>
                            </form>
                        </div>
                    </li>
                </ul>               
                @Html.Partial("_UserPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="container">            
            <ng-view>
                @RenderBody()
            </ng-view>
        </div>        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!--Services-->
    <script src="~/App/Services/ProductService.js"></script>
    <!--Load Files -->
    <script src="~/App/Route/routes.js"></script>
    <!--Controllers-->
    <script src="~/App/Controllers/globalController.js"></script>
    <script src="~/App/Controllers/Home/homeController.js"></script>

</body>
</html>
